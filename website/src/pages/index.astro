---
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <div class="flex flex-col gap-4 items-center justify-center h-100dvh">
    <h1 class="font-bold text-4xl">StayReal</h1>

    <p class="text-white/80 text-center">
      An open-source, lightweight and privacy-focused BeReal alternative client.
    </p>

    <div class="flex items-center gap-4">
      <a href="https://github.com/Vexcited/StayReal" target="_blank">GitHub</a>
      <a href="/support">Support & FAQ</a>
      <a href="/privacy-policy">Privacy Policy</a>
    </div>

    <a
      href="/download"
      class="text-dark bg-white font-medium rounded-full px-5 py-2 mt-4 hover:bg-white/90 transition-colors"
    >
      Download
    </a>
  </div>
</Layout>
